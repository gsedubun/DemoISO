    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Business_Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Business_Representative)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VAT_Number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_Customer }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Customer }) |
