@model IEnumerable<DemoISO.DAL.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Business_Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Business_Representative)
        </th>
        <th>
